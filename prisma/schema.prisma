generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mosque {
  id       String @id @default(uuid())
  name     String
  address  String
  district String
  city     String
  province String

  timezone  String
  latitude  Float?
  longitude Float?

  description String?
  logoUrl     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mosques")
}

model Profile {
  id    String @id @default(uuid())
  email String @unique
  name  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}
