// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Mosque {
  id       String @id @default(uuid())
  name     String
  address  String
  district String
  city     String
  province String

  timezone  String
  latitude  Float?
  longitude Float?

  description String?
  logoUrl     String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("mosques")
}

model Profile {
  id    String @id @default(uuid())
  email String @unique
  name  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("profiles")
}

model Announcement {
  id      String @id @default(uuid())
  content String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("announcements")
}

model DisplayImage {
  id        String @id @default(uuid())
  imageUrl  String
  imagePath String
  sortOrder Int    @default(0)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("display_images")
}

enum FinanceCategory {
  INFAQ_MASJID
  INFAQ_ANAK_YATIM
}

enum FinanceType {
  PEMASUKAN
  PENGELUARAN
}

model FinanceTransaction {
  id          String          @id @default(uuid())
  nominal     Int
  category    FinanceCategory
  type        FinanceType
  description String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([createdAt])
  @@index([category, createdAt])
  @@index([type, createdAt])
  @@map("finance_transactions")
}

// Alur: Alarm Azan berbunyi → Countdown Iqamah tampil → Alarm Iqamah berbunyi
model PrayerSettings {
  id String @id @default(uuid())

  // Durasi countdown iqamah setelah azan berbunyi (5 | 10 | 15 menit)
  iqamahCountdownMinutes Int @default(10)

  // Path file suara alarm azan (relatif ke /public)
  adhanSoundPath String @default("/sounds/adhan-default.mp3")

  // Path file suara alarm iqamah
  iqamahSoundPath String @default("/sounds/iqamah-default.mp3")

  // Aktifkan/nonaktifkan masing-masing alarm
  adhanAlarmEnabled  Boolean @default(true)
  iqamahAlarmEnabled Boolean @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("prayer_settings")
}
